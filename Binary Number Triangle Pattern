/**code**/

void nBinaryTriangle(int n) {

    for(int i=1; i<=n; i++){
        for(int j=1; j<=i; j++){
            if((i+j)%2 !=0){
                cout<<"0 ";
            }
            else{
                cout<<"1 ";
            }
        }
        cout<<endl;
    }
}
