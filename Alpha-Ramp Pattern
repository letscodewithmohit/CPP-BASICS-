void alphaRamp(int n) {
    // Write your code here.

//Approch 1:
for(int i=0; i<n; i++){
    char ch = 'A' + i;

    for(int j=0; j<=i; j++){
    cout<<ch<<" ";
    }
    cout<<endl;
}

