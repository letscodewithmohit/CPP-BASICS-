/**code**/

void nStarTriangle(int n) {
    // Write your code here.
    for(int i=1; i<=n; i++){


//1st inner for space 
for(int space = 1; space <=n-i; space++){
    cout<<" ";
}


//2nd inner for stars

for(int star = 1; star <=2*i-1; star++){
    cout<<"*";
}

//2rd inner for space 
for(int sp = 1; sp<=n-i; sp++){
    cout<<" ";
}
cout<<endl;
    }
}
