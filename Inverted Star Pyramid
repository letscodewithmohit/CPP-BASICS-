/**code**/

void nStarTriangle(int n) {
    // Write your code here.
 for(int i=1; i<=n; i++){

     //for the 1st spacings
     for(int space = 1; space <=i-1; space++){
     cout<<" ";
     }
     //for the stars
     for(int star = 1; star <= 2*n - ( 2*i - 1); star++){
     cout<<"*";
     }
     cout<<endl;
     //for the spacings
       for(int space = 1; space <=i-1; space++){
      cout<<" ";
     }
 }
}
